        .topic= "Login"
        form#loginform
            input(type="text" id="username" autocomplete="off" placeholder="Username") 
            input(type="password" id="password" autocomplete="off" placeholder="Password")
            input(type="submit" id="submit" value="Submit form")
        br
        button(onclick=`location.href = '`+registerUrl+`';` id="redirectButton")= 'Redirect me to Register'

        script.
            mainUrl="#{mainUrl}";
            mainAPIUrl="#{mainAPIUrl}";

        script. 
            const form = document.getElementById('loginform');
            form.addEventListener('submit', login)
            async function login(event){
                event.preventDefault()
                const username = document.getElementById('username').value
                const password = document.getElementById('password').value
                const result = await fetch('/api/login', {
                    method: 'POST',
                    headers: {
                        'Content-type' : 'application/json'
                    },
                    body: JSON.stringify({
                        username,
                        password
                    })
                }).then((res) => res.json())

                if (result.status === 'ok'){
                    console.log('Got the token: ',result.data)
                    //- POST request with body equal on data in JSON format
                    const customID=JSON.parse(atob(result.data.split(".")[1])).id;
                    const resultRedirect = await fetch(mainAPIUrl, {
                        method: 'POST',
                        headers: {
                            'Content-type' : 'application/json',
                        },
                        body: JSON.stringify({
                            username,
                            customID
                        })
                    //- }).then((res) => location.href = mainUrl+JSON.parse(atob(result.data.split(".")[1])).id)
                    }).then((res)=>{
                        location.href = mainUrl+'/'+ JSON.parse(atob(result.data.split(".")[1])).id
                    })
                }
                else{
                    alert(result.error)
                }
            }


            