script(type='text/javascript' src='src/forumStyleControl.js')
script.
  function init(){
    const subforums = document.getElementsByClassName("subforum-description subforum-column");
    let topic= subforums[0].firstChild.firstChild.innerText
    Array.prototype.forEach.call(subforums, subforum=>{
        let topic = subforum.firstChild.firstChild.innerText;
        subforum.addEventListener("click",(e)=>{
          location.href = '/userMain/'+topic
        })
    })
  }
  window.onload = function() {
    init();
  };
  


